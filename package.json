  "keywords": [
    "snake.js",
    "snake",
    "html5",
    "js",
    "es6"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/pencilpix/snake.git"
  },
  "homepage": "https://github.com/pencilpix/snake#README",
  "author": "Mohamed Hassan <pencilpix11@gmail.com> (http://mohamedhassan.me)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.8.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine": "^2.6.0",
    "jasmine-core": "^2.6.2",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.1",
